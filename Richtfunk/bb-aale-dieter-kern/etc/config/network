config interface 'client'
	option igmp_snooping '1'
	option type 'bridge'
	option auto '1'
	option ra_holdoff '30'
	option multicast_querier '1'
	option macaddr '10:fe:ed:57:ea:90'
	list ifname 'eth1.1'
	list ifname 'local-port'
	list ifname 'bat0'
	option ipv6 '1'
	option keep_ra_dnslifetime '1'
	option sourcefilter '0'
	option peerdns '1'
