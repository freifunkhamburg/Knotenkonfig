config interface 'client'
	option igmp_snooping '1'
	option type 'bridge'
	option auto '1'
	option ra_holdoff '30'
	option multicast_querier '1'
	option ipv6 '1'
	option macaddr 'f8:1a:67:5a:a3:e7'
	option proto 'dhcpv6'
	list ifname 'lan3'
	list ifname 'lan4'
	list ifname 'local-port'
	list ifname 'bat0'
	option keep_ra_dnslifetime '1'
	option sourcefilter '0'
	option peerdns '1'
	option robustness '9'
	option reqprefix 'no'
