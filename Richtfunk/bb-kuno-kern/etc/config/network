        option fixed_mtu '1'
        option transitive '1'
        option igmp_snooping '0'

config interface 'wan'
	option igmp_snooping '1'
	option ifname 'eth0'
	option multicast_querier '0'
	option peerdns '0'
	option auto '1'
	option type 'bridge'
	option proto 'dhcp'
	option macaddr '46:44:38:4b:d6:58'

config rule6 'wan6_lookup'
	option mark '0x01/0x01'
	option lookup '1'

config route6 'wan6_unreachable'
	option type 'unreachable'
	option table '1'
	option target '::/0'
	option metric '65535'
	option gateway '::'
	option interface 'loopback'

