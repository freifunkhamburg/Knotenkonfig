config interface 'client'
	option igmp_snooping '1'
	option type 'bridge'
	option auto '1'
	option multicast_querier '1'
	option macaddr 'a4:2b:b0:d9:07:57'
	list ifname 'eth1'
	list ifname 'local-port'
	list ifname 'bat0'
	option ipv6 '1'
	option keep_ra_dnslifetime '1'
	option sourcefilter '0'
	option peerdns '1'
	option robustness '3'
	option reqprefix 'no'
	option query_interval '2000'
	option query_response_interval '500'
	option proto 'dhcpv6'

config device 'local_node_dev'
	option type 'veth'
	option name 'local-node'
	option peer_name 'local-port'
	option macaddr '16:41:95:40:f7:dc'
	option peer_macaddr 'a4:2b:b0:d9:07:57'

config interface 'local_node'
